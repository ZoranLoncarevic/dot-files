function setprompt() {
	case "$1" in
		"default")
			PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ ' ;;
		"arrow")
			PS1='\[\033[01;32m\] ðŸ Š \[\033[00m\] ' ;;
		"arrow2")
			PS1='\[\033[01;32m\] â±\[\033[00m\] ' ;;
		*)	echo "Unknown prompt!"
	esac
}

# set terminal window title
# Taken from https://unix.stackexchange.com/a/186167
function set-title() {
	if [[ -z "$ORIGINAL_PS1" ]]; then
		ORIGINAL_PS1=$PS1
	fi
	
	if [[ $# -eq 0 ]]; then
		PS1=${ORIGINAL_PS1}
	else
		TITLE="\[\e]2;$*\a\]"
		PS1=${ORIGINAL_PS1}${TITLE}
	fi
}

function wcd() {
	go_file="${WCDHOME:-${HOME}}/bin/wcd.go"
	rm -f "$go" 2> /dev/null
	
	wcd.exec "$@"
	[ -f "$go_file" ] && . "$go_file"
	unset go_file
}

